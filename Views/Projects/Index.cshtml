@model IEnumerable<DBMSProjet.Database.Project>

@{
    ViewBag.Title = "Index";
}


<p style="text-align:right; margin-right:4%;">
    @Html.ActionLink(" Add", "Create", null, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
</p>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Projects</h3>
                        
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProjectName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BusinessName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ServiceCharge)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ConsultantFee)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PersonnelCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Client1.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee1.FirstName)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProjectName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BusinessName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServiceCharge)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ConsultantFee)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PersonnelCost)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Client1.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Employee.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Employee1.FirstName)
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = item.ProjectID },  new { @class = "glyphicon glyphicon-pencil" }) |
                                            @Html.ActionLink(" ", "Details", new { id = item.ProjectID }, new { @class = "glyphicon glyphicon-log-in" }) |
                                            @Html.ActionLink(" ", "Delete", new { id = item.ProjectID }, new { @class = "glyphicon glyphicon-trash" })
                                        </td>                                  
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            </div>
</div>
</div>