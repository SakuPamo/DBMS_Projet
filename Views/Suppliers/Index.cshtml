@model IEnumerable<DBMSProjet.Database.Supplier>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Suppliers</h3>
                        
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SupplierName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AddressLine1)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AddressLine2)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.City)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Country)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ContactNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SupplierName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressLine1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressLine2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Country)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = item.SupplierID }, new { @class = "glyphicon glyphicon-pencil" }) |
                                            @Html.ActionLink(" ", "Details", new { id = item.SupplierID }, new { @class = "glyphicon glyphicon-log-in" }) |
                                            @Html.ActionLink(" ", "Delete", new { id = item.SupplierID }, new { @class = "glyphicon glyphicon-trash" })
                                        </td>
                                    </tr>
                                }

                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
