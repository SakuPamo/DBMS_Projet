@model IEnumerable<DBMSProjet.Database.ProjectPayment>

@{
    ViewBag.Title = "Index";
}



<p style="text-align:right; margin-right:4%;">
    @Html.ActionLink(" Add", "Create", null, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
</p>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Project Payments</h3>
                       
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Amount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PaymentDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvoiceNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Project.ProjectName)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaymentDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvoiceNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project.ProjectName)
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "glyphicon glyphicon-pencil" }) |
                                            @Html.ActionLink(" ", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "glyphicon glyphicon-log-in" }) |
                                            @Html.ActionLink(" ", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "glyphicon glyphicon-trash" })
                                        </td>
                                    </tr>
                                }

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
